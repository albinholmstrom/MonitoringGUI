@{
    Layout = "_Layout";
    ViewData["Title"] = "Logga in";
}
<div id="toast-container" class="toast-container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast">
            @TempData["SuccessMessage"]
        </div>

        <script>
            // Visa toasten och göm den efter 3 sekunder
            setTimeout(() => {
                document.querySelector('.toast').classList.add('hide');
            }, 3000);
        </script>
    }
</div>


<div class="login-overlay">
    <div class="login-container">
        <h2>Logga in</h2>
        <div class="login-box">
            <form method="post" action="@Url.Action("Login", "Account")">
                <input type="text" name="username" placeholder="Användarnamn" required>
                <input type="password" name="password" placeholder="Lösenord" required>
                <button type="submit" class="login-button">Logga in</button>
            </form>
            <p>
                Har du inget konto?
                <a asp-controller="Account" asp-action="Register">Skapa ett här</a>
            </p>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
        }
    </div>
</div>
