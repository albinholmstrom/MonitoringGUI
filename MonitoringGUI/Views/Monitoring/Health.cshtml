@{
    ViewData["Title"] = "API Anropsstatistik";
    Layout = "_Layout";
}

<h2>A</h2>

<div class="headline-wrapper">
    <div class="headlinebox">
        <p class="headline">Välj en funktion:</p>
    </div>
</div>

<div class="container">
    <div>
        <a href="@Url.Action("Index", "Employee")" class="button">Anställda</a>
    </div>
    <div>
        <a href="@Url.Action("Health", "Monitoring")" class="button">Övervakning</a>
    </div>
    <div>
        <a href="@Url.Action("Stats", "Monitoring")" class="button">Antal anrop</a>
    </div>
</div>


<div class="headline-wrapper">
    <div class="headlinebox">
        <h9 class="table-title">API-Status</h9>
    </div>
</div>

<div class="table-wrapper">
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>API-namn</th>
                    <th>Meddelande</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.ApiStatuses != null)
                {
                    foreach (var api in ViewBag.ApiStatuses)
                    {
                        <tr>
                            <td>@api.Key</td>
                            <td>@api.Value</td>
                            <td style="text-align: center; font-weight: bold; color: white; background-color:
                                @(api.Value == "Running" ? "#28a745" : api.Value == "Issue Detected" ? "#ffc107" : "#dc3545")">
                                @(api.Value == "Running" ? "Up" : api.Value == "Issue Detected" ? "Issue" : "Down")
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">Ingen status tillgänglig.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

